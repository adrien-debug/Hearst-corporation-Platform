{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CustomerInvoicesPanel",
  "type": "object",
  "properties": {
    "filters": {
      "type": "object",
      "properties": {
        "status": { "type": "string" },
        "dateRange": {
          "type": "object",
          "properties": {
            "from": { "type": "string", "format": "date" },
            "to": { "type": "string", "format": "date" }
          }
        },
        "search": { "type": "string" }
      }
    },
    "invoicesTable": {
      "type": "object",
      "properties": {
        "columns": { "type": "array", "items": { "type": "string" } },
        "rows": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "number": { "type": "string" },
              "type": { "type": "string" },
              "date": { "type": "string", "format": "date" },
              "total": { "type": "number" },
              "status": { "type": "string" },
              "actions": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        },
        "pagination": {
          "type": "object",
          "properties": {
            "page": { "type": "integer" },
            "pageSize": { "type": "integer" },
            "total": { "type": "integer" }
          }
        },
        "exportCsv": { "type": "boolean" }
      }
    },
    "viewerModal": {
      "type": "object",
      "properties": {
        "open": { "type": "boolean" },
        "pdfUrl": { "type": "string" }
      }
    },
    "loadingState": { "type": "boolean" },
    "errorBox": { "type": "string" },
    "supportButton": { "type": "boolean" }
  },
  "required": ["filters", "invoicesTable"]
}

